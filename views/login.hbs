<div class="sign-form">
  <div class="card m-auto form" style="max-width: 30rem;">
    <h1>Sign In</h1>
    <div class="card-body">

      {{#if success_messages}}
        <div class="alert alert-success" role="alert">
          {{success_messages}}
        </div>
      {{/if}}

      {{#if error_messages}}
        <div class="alert alert-danger" role="alert">
          {{error_messages}}
        </div>
      {{/if}}

      <form action="/login" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="password"
          />
        </div>
        <br />
        <button type="submit" class="btn btn-major btn-block">Submit</button>
        <a href="/auth/facebook">
          <button type="button" class="btn btn-fb btn-block">
            Log in With Facebook
          </button>
        </a>
        <br />
        <small>Don't have an account? Here to
          <a href="/signup">Sign Up</a></small>
      </form>
    </div>
  </div>
</div>